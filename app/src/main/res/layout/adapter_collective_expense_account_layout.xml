                    android:layout_weight="5"
                    android:drawablePadding="2dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/lamp_black" />

                <TextView
                    android:id="@+id/receive5_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:drawablePadding="2dp"
                    android:textAlignment="textStart"
