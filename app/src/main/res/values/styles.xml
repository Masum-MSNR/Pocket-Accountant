<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="buttonStyle">
        <item name="android:paddingTop">7dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="smallButtonStyle">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/kohinoor_bangla_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="transparentStatusAndNavigationBar" parent="Theme.PA.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="ToolbarTheme">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/color_primary</item>
        <item name="contentInsetStart">0dp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:contentInsetStart" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/kohinoor_bangla_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">.05</item>
    </style>

    <!--DatePicker-->
    <style name="customDatePickerDialogTheme" parent="android:Theme.Holo.Light.Dialog.MinWidth" tools:targetApi="lollipop">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogPopAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_up_from_center</item>
        <item name="android:windowExitAnimation">@anim/pop_down_to_center</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MediumSizeTitleText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DrawerText">
        <item name="android:fontFamily">@font/kohinoor_bangla_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NavigationTheme" parent="Theme.PA.NoActionBar">
        <item name="listPreferredItemHeightSmall">40dp</item>
    </style>

    <!--DimLightDisabler-->
    <style name="DimLightDisabler" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>